@import "../../common/stylus/mixin.styl";
  .userinfo
    .user
      width: 100%
      font-size: 0
      padding: 10px 20px
      .avatar
      	width: 60px
      	height: 60px
      	display: inline-block
      	vertical-align: middle
      	border: 1px solid #0089dc
      	border-radius: 50%
      	img
          display: block
          border-radius: 50%
      .user-info
      	margin-left: 15px
      	display: inline-block
      	font-size: 14px
      	vertical-align: middle
      	.username
      	  .icon-username
      	    color: #0089dc
      	    font-size: 18px
    .address-manage
      padding-left: 20px
      .address, .orders-check
      	width: 100%
      	height: 40px
      	line-height: 40px
      	font-size: 14px
      	position: relative
      .address
      	border-1px(rgba(7, 17, 27, 0.1))
      	.icon-location
      	  color: #0089dc
      	.icon-zuoyoujiantou
          position: absolute
          right: 0
          padding: 0 20px
      .orders-check
      	.icon-flower
      	  color: #0089dc
      	.icon-zuoyoujiantou
          position: absolute
          right: 0
          padding: 0 20px