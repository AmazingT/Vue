.orderDetail
  width: 100%
  height: 100%
  position: absolute
  z-index: 160
  top: 0
  left: 0
  overflow: hidden
  background-color: #fff
  transform: translate3d(0, 0, 0)
  &.move-enter-active, &.move-leave-active
    transition: all 0.2s linear
  &.move-enter, &.move-leave-to
    transform: translate3d(100%, 0, 0)
  .orderDetail-content
    width: 100%
    position: absolute
    z-index: 110
    top: 34px
    left: 0
    bottom: 0
    overflow: hidden
    .tell
      width: 80px
      margin: 20px auto 0 auto
      margin-bottom: 10px
      color: #000
      font-size: 14px
      padding: 6px 15px
      border: 1px solid #ccc
      border-radius: 5px
      text-align: center
    .delivery-wrapper
      padding-top: 10px
      .title
        color: #000
        font-size: 14px
        font-weight: 700
        padding: 12px 0 12px 10px
        border-bottom: 1px solid #E9E9E9
      .list
        padding: 0 10px
        li
          padding: 14px 0
          color: #8F8E8E
          font-size: 12px
          border-bottom: 1px solid #E9E9E9
          &:last-child
            border-bottom: none
    .order-info
      padding-top: 10px
      .title
        color: #000
        font-size: 14px
        font-weight: 700
        padding: 12px 0 12px 10px
        border-bottom: 1px solid #E9E9E9
      .list
        padding: 0 10px
      li
        padding: 14px 0
        color: #8F8E8E
        font-size: 12px
        border-bottom: 1px solid #E9E9E9