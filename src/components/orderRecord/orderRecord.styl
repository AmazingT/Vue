@import "../../common/stylus/mixin.styl";
.orderRecord
  width: 100%
  height: 100%
  position: absolute
  z-index: 160
  top: 0
  left: 0
  overflow: hidden
  background-color: #fff
  transform: translate3d(0, 0, 0)
  &.move-enter-active, &.move-leave-active
    transition: all 0.2s linear
  &.move-enter, &.move-leave-to
    transform: translate3d(100%, 0, 0)
  .orderRecord-content
    width: 100%
    position: absolute
    z-index: 110
    top: 34px
    left: 0
    bottom: 0
    overflow: hidden
    .detail
      position: relative
      padding: 10px 0 0 10px
      .icon-wrapper, .seller
        display: inline-block
        position: absolute
      .icon-wrapper
        width: 30px
        height: 30px
        img
          width: 100%
          height: 100%
      .seller
        width: 100%
        top: 0
        left: 40px
        padding: 0 0 10px
        border-1px(rgba(7, 17, 27, 0.1))
        .wrapper
          display: inline-block
          .name
            margin-bottom: 2px
            font-weight: 600
            .iconfont
              padding: 0 10px
              color: rgba(7, 17, 27, 0.5)
          .time
            font-size: 12px
            color: rgba(7, 17, 27, 0.5)
    .list
      margin-left: 10px
      margin-bottom: 10px
      padding: 10px 0 0 10px
      font-size: 12px
      color: rgba(7, 17, 27, 0.6)
      border-1px(rgba(7, 17, 27, 0.1))
      .deliveryPrice
        position: relative
        padding: 10px 0
        margin-left: 40px
        border-top: 1px solid rgba(7, 17, 27, 0.1)
        .price
          position: absolute
          right: 15px
          color: #000
      .list-li
        position: relative
        padding: 10px 0 10px 40px
        .orders-name
          display: inline-block
          width: 120px
          overflow: hidden
          text-overflow: ellipsis
          white-space: nowrap
        .orders-count
          position: absolute
          right: 80px
        .price
          position: absolute
          right: 15px
          color: #000
          font-weight: 700
      .total
        margin-left: 40px
        height: 30px
        line-height: 30px
        position: relative
        border-top: 1px solid rgba(7, 17, 27, 0.1)
        p
          position: absolute
          right: 15px
          color: #ed001c
  .no-orders
    width: 100%;
    height: 34px;
    line-height: 34px;
    color: #777;
    position: absolute;
    top: 50%;
    margin-top: -17px;
    font-size: 14px;
    text-align: center;
          






