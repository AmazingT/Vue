.orders
  width: 100%
  height: 100%
  overflow: hidden
  position: fixed
  z-index: 100
  top: 0
  left: 0
  background-color: #eee
  transform: translate3d(0, 0, 0)
  &.move-enter-active, &.move-leave-active
  	transition: all 0.2s linear
  &.move-enter, &.move-leave-to
  	transform: translate3d(100%, 0, 0)
  .orders-content
    width: 100%
    position: absolute
    top: 34px
    left: 0
    bottom: 80px
    overflow: hidden
  .address-wrapper
    padding: 10px 15px
    position: relative
    background-color: #fff
    margin-bottom: 10px
  	.addr-icon, .user-right, .edit
      	display: inline-block
      	vertical-align: middle
      .addr-icon
      	.icon-location
      	  color: #139dff
      	  font-size: 18px
      .user-right
      	margin-left: 8px
      	max-width: 65%
      	line-height: 20px
      	.user-info
      	  margin-bottom: 4px
      	  .name
      	    font-size: 16px
      	    font-weight: 700
      	  .sex, .tell
      	    font-size: 14px
      	    margin-left: 4px
      	.addr
      	  font-size: 14px
      	  color: #999
        .no-address
          color: #000
          font-size: 14px 
      .go
        position: absolute
        right: 10px
        top: 50%
        transform: translate(0, -50%)
  .add-address
  	width: 100%
  	position: fixed
  	left: 0
  	bottom: 0
  	background-color: #fff
  	text-align: center
  	height: 48px
  	line-height: 48px
  	font-size: 0
  	color: #0089dc
	.icon, .text
      display: inline-block
      vertical-align: top
    .icon
      font-size: 14px
	.text
	  margin-left: 4px
	  font-size: 14px
  .delivery-time
  	width: 100%
  	padding: 10px 0
  	background-color: #fff
  	border-left: 4px solid #0089dc
  	margin-bottom: 10px
  	.delivery-content
  	  padding-left: 6px
  	  position: relative
  	  font-size: 14px
  	  .arrive
  	  	font-weight: 700  
  	  .time
  	  	position: absolute
  	  	right: 60px
      line-height: 20px           
  	  	color: #0089dc 
  	  .icon-zuoyoujiantou
  	  	position: absolute
  	  	right: 14px  
  .pay-way
  	width: 100%
  	padding: 10px 0
  	background-color: #fff
  	margin-bottom: 10px
  	.pay-content
      padding-left: 10px
      position: relative
      .text
      	font-size: 14px
      	color: #000
      .online
      	font-size: 14px
      	color: #0089dc 
      	position: absolute
      	right: 35px
      .icon-zuoyoujiantou
      	position: absolute
      	right: 10px
  .address-info
  	position: fixed
  	bottom: 48px
  	left: 0
  	white-space: nowrap
  	width: 100%
  	background-color: #ffffcc
  	padding: 6px 12px
  	.address
  	  color: #000
  	  font-size: 14px
  .submit-orders
    width: 100%
    height: 48px
    position: fixed
    left: 0
    bottom: 0
    z-index: 150
    background: #000
    .content
      display: flex
      background: #141d27
      color: rgba(255, 255, 255, 0.4)
      .content-left
      	flex: 1
      	font-size: 0
      	.pay
          font-size: 16px
          line-height: 24px
          margin-top: 12px
          display: inline-block
          padding: 0 6px 0 10px
          color: #fff
          box-sizing: border-box
          border-right: 1px solid rgba(255, 255, 255, 0.1)
        .reduce
          font-size: 12px
          display: inline-block
          margin-left: 4px
          color: #999
      .content-right
      	flex: 0 0 105px
      	width: 105px
      	background: #00b43c
      	color: #fff
      	height: 48px
  	    line-height: 48px
  	    text-align: center
  	    font-size: 14px
  	    font-weight: 700