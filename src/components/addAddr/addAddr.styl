@import "../../common/stylus/mixin.styl";
.addAddr
  width: 100%
  height: 100%
  position: fixed
  z-index: 200
  top: 0
  left: 0
  background-color: #f3f3f3
  .addAddr-wrapper
    width: 100%
    position: absolute
    top: 34px
    left: 0
    background-color: #fff
    .addAddr-content
      padding: 5px 20px
    .list
      border-1px(rgba(7, 17, 27, 0.1))
      margin-bottom: 15px
      padding: 10px 0
      display: flex
      .connect
      	margin-left: 18px
  	  .addAddr-left, .addAddr-right
  	  	display: inline-block
  	  .addAddr-left
  	  	font-size: 16px
  	  	margin-right: 20px
  	  	flex: 0 0 80px
  	  .addAddr-right
  	  	flex: 1
  	  	input
  	  	  width: 100%
  	  	  border: 0
  	  	  outline: 0
  	  	.name
  	  	  padding-bottom: 10px
  	  	  border-1px(rgba(7, 17, 27, 0.1))
  	  	.select
  	  	  margin-top: 10px
  	  	  .sex
  	  	    display: inline-block
  	  	    .icon-gou, .text
  	  	      display: inline-block
  	  	      vertical-align: top
  	  	    .icon-gou
  	  	      color: #999
  	  	      &.active
      	  	    color: #00c850
  	  	    .text
  	  	      line-height: 16px
  	  	    &:last-child
  	  	      margin-left: 4px
  .tips
    position: fixed
    z-index: 150
    top: 50%
    left: 50%
    width: 240px
    height: 100px
    border-radius: 10px
    background-color: #fff
    opacity: 1
    transform: translate(-50%, -50%)
    &.fade-enter-active, &.fade-leave-active
      transition: opacity 0.2s linear
    &.fade-enter, &.fade-leave-to
      opacity: 0
    .content
      padding: 20px 0
      text-align: center
      border-1px(rgba(7, 17, 27, 0.1))
    .ok
      color: #fff
      text-align: center
      line-height: 44px
      border-radius: 0 0 10px 10px
      background-color: #0089dc
  .box-mask
    width: 100%
    position: fixed
    z-index: 125
    top: 34px
    left: 0
    bottom: 0
    background-color: rgba(0, 0, 0, 0.5);
    opacity: 1
    &.fad-enter-active, &.fad-leave-active
      transition: opacity 0.2s linear
    &.fad-enter, &.fad-leave-to
      opacity: 0
  .confirms
  	width: 100%
  	padding: 12px 0
  	text-align: center
  	color: #fff
  	background-color: #1cd504
  	border-radius: 4px